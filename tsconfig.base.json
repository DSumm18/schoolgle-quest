{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@schoolgle/shared": ["packages/shared/src"],
      "@schoolgle/game-logic": ["packages/game-logic/src"],
      "@schoolgle/integration": ["packages/integration/src"]
    }
  }
}
